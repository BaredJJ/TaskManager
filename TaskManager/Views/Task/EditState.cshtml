@model ProjectTask;
@{
    Layout = "_Layout";
}
<div>
    <form class="p-1" asp-action="EditState" method="post">
        <div class="form-group">
            <input type="hidden" class="form-control" asp-for="Id" value="@Model.Id"/>
        </div>
        <div class="form-group">
            <label>Название:</label>
            <input class="form-control" asp-for="Name" readonly="readonly" value="@Model.Name"/>
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" asp-for="StartDateTime" value="@Model.StartDateTime"/>
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" asp-for="EnDateTime" value="@Model.EnDateTime"/>
        </div>
        <div class="form-group">
            <label>Статус:</label>
            <select class="form-control" asp-for="State">
                @foreach (var state in ViewBag.States)
                {
                    <option value="@state">@state</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Исполнитель:</label>
            <input class="form-control" readonly="readonly" value="@ViewBag.Manager.LastName @ViewBag.Manager.FirstName"/>
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" asp-for="ManagerId" value="@ViewBag.Manager.Id"/>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Изменить</button>
        </div>
    </form>
</div>


